{
  // "awesomeTypescriptLoaderOptions": {
  //   "useBabel": true,
  //   "useCache": true,
  //   "useTranspileModule": true
  //   },

  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "lib": ["es6", "dom"],
    "noImplicitThis": true,
    "strictNullChecks": true,
  },
  
  "include": [
    "./src/index.tsx"
  ]
}